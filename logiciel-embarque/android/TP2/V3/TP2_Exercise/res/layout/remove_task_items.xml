<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/remove_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/remove_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remove_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remove_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/remove_name"
        android:gravity="right"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/remove_checkBok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remove_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/remove_date"
        android:gravity="right" />

    <TextView
        android:id="@+id/remove_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remove_name"
        android:paddingRight="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remove_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remove_start"
        android:layout_below="@id/remove_name"
        android:layout_toRightOf="@id/remove_start"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remove_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remove_start"
        android:layout_alignParentRight="true"
        android:layout_below="@id/remove_name"
        android:layout_toRightOf="@id/remove_end"
        android:gravity="right"
        android:textSize="16sp" />

</RelativeLayout>