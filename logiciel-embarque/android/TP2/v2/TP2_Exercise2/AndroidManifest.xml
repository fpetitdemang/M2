<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.um2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="fr.um2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.um2.AddTaskActivity"
            android:label="@string/title_activity_add_task" >
        </activity>
        <activity
            android:name="fr.um2.DisplayTaskActivity"
            android:label="@string/title_activity_display_task" >
        </activity>
        <activity
            android:name="fr.um2.RemoveTaskActivity"
            android:label="@string/title_activity_remove_task" >
        </activity>
        <activity
            android:name="fr.um2.AddCategoryActivity"
            android:label="@string/title_activity_add_category" >
        </activity>
        
    </application>

</manifest>
